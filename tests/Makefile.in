
AUTOMAKE_OPTIONS = foreign
BUILDDIR := ../build

CXXFLAGS?=-Wall -Wno-switch -ggdb -fPIC $(EXTRA_CFLAGS)
LDFLAGS?=-lpthread 

OS := $(shell $(CXX) -v 2>&1 | grep Target | sed 's/Target: //' | cut -d- -f 2)
ARCH := $(shell $(CXX) -v 2>&1 | grep Target | sed 's/Target: //' | cut -d- -f 1)

ifneq ($(UNAME_S),apple)
        LDFLAGS += -lrt
else
	LINUXDVB=0
endif

SOURCES=\
	test_adapter.cpp \
	test_opts.cpp \
	test_ca.cpp \
	test_pmt.cpp \
	test_ddci.cpp \
	test_dvb.cpp \
	test_minisatip.cpp \
	test_utils.cpp \
	test_socketworks.cpp \
	utils/test_utils.cpp

MAIN_SOURCES=$(shell find ../src -type f -iname '*.cpp')

TABLES=0
PMT=0

LIBS+=crypto dl pthread stdc++exp
LIBS+=dvbcsa
CXXFLAGS += -std=c++23 -fsanitize=address -fno-omit-frame-pointer -fsanitize=leak -fsanitize=null
CXXFLAGS += -I../src

CXXFLAGS += -DENIGMA
CXXFLAGS += -DTESTING
CXXFLAGS += -DDDCI_TEST
CXXFLAGS += -DDISABLE_NETCVCLIENT
CXXFLAGS += -DVERSION=\"test\"

LDFLAGS+=$(addprefix -l,$(LIBS))

BINS := $(patsubst %.cpp, $(BUILDDIR)/%, $(SOURCES))

test: $(BINS)
	@echo "Tests completed successfully"

$(BUILDDIR)/%.d : %.cpp
	@mkdir -p $(dir $@)
	@$(CXX) $(CXXFLAGS) -MM $(basename $*).c | sed -e 's@^\(.*\)\.o:@\1.d \1.o:@' > $@

$(BUILDDIR)/% : %.cpp
	@mkdir -p $(dir $@)
	$(CXX) $(CXXFLAGS) $*.cpp $(MAIN_SOURCES) -o $(BUILDDIR)/test $(LDFLAGS)
	@echo "Running $@"
	@$(BUILDDIR)/test
	@rm -f $(BUILDDIR)/test

clean:
	rm -rf $(BUILDDIR) $(TARGET) >> /dev/null

# pull in dependency info for *existing* .o files
ifneq "$(MAKECMDGOALS)" "clean"
-include $(DEPS)
endif
