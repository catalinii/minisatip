
AUTOMAKE_OPTIONS = foreign
BUILDDIR := ../build
TARGET:=../minisatip

CXX=@CXX@
DVBCSA=@DVBCSA@
DVBCA=@DVBCA@
SATIPCLIENT=@SATIPCLIENT@
NETCVCLIENT=@NETCVCLIENT@
STATIC=@STATIC@
DVBAPI=@DVBAPI@
LINUXDVB=@LINUXDVB@
DDCI=0

CXXFLAGS?=-Wall -Wno-switch -ggdb -fPIC -fno-common -Warray-bounds
CXXFLAGS += -I../src
CXXFLAGS += $(EXTRA_CFLAGS) @CFLAGS@
LDFLAGS += @LDFLAGS@ -lpthread
CPPFLAGS += @CPPFLAGS@

OS := $(shell $(CXX) -v 2>&1 | grep Target | sed 's/Target: //' | cut -d- -f 2)
ARCH := $(shell $(CXX) -v 2>&1 | grep Target | sed 's/Target: //' | cut -d- -f 1)
MAJOR := 1.3.
MINOR := $(shell git tag --points-at HEAD | cut -d. -f3 | tail -1)
REVISION := $(shell git rev-parse --short HEAD)
CXXFLAGS+=-DMAJOR=\"$(MAJOR)\" -DMINOR=\"$(MINOR)\" -DREVISION=\"$(REVISION)\"

ifneq ($(OS),apple)
        LDFLAGS += -lrt
else
	LINUXDVB=0
	DVBCA=0
	NETCVCLIENT=0
endif

SOURCES=\
	minisatip.c \
	socketworks.c \
	stream.c \
	adapter.c \
	httpc.c \
	opts.c \
	utils.c \
	api/symbols.c \
	api/variables.c \
	utils/dvb/dvb_support.c \
	utils/logging/logging.c \
	utils/alloc.c \
	utils/fifo.c \
	utils/hash_table.c \
	utils/mutex.c \
	utils/ticks.c \
	utils/uuid.c

TABLES=0
PMT=0

ifeq ($(DVBCSA),1)
LIBS+=dvbcsa
SOURCES+=csa.c
PMT=1
else
CXXFLAGS+=-DDISABLE_DVBCSA
endif

ifeq ($(DVBAPI),1)
SOURCES+=dvbapi.c
TABLES=1
PMT=1
else
CXXFLAGS+=-DDISABLE_DVBAPI
endif

ifeq ($(DVBCA),1)
LIBS+=crypto
LDFLAGS += -ldl
SOURCES+=ca.c aes.c
TABLES=1
PMT=1
ifeq ($(OS),linux)
DDCI=1
endif
else
CXXFLAGS+=-DDISABLE_DVBCA
endif

ifeq ($(PMT),1)
SOURCES+=pmt.c
else
CXXFLAGS+=-DDISABLE_PMT
endif

ifeq ($(TABLES),1)
SOURCES+=tables.c
else
CXXFLAGS+=-DDISABLE_TABLES
endif

ifeq ($(SATIPCLIENT),1)
SOURCES+=satipc.c
else
CXXFLAGS+=-DDISABLE_SATIPCLIENT
endif

ifeq ($(NETCVCLIENT),1)
SOURCES+=netceiver.c
LDFLAGS+=-lnetceiver -lxml2
else
CXXFLAGS+=-DDISABLE_NETCVCLIENT
endif

ifeq ($(LINUXDVB),1)
SOURCES+=dvb.c
else
CXXFLAGS+=-DDISABLE_LINUXDVB
SOURCES+=dvb.c
endif

ifeq ($(DDCI),1)
SOURCES+=ddci.c
else
CXXFLAGS+=-DDISABLE_DDCI
endif

ifeq ($(DEBUG),1)
CXXFLAGS += -fsanitize=address -fno-omit-frame-pointer -fsanitize=leak -fsanitize=undefined -static-libasan -static-libubsan -static-liblsan -fstack-protector-all
else
CXXFLAGS += -O2
endif

ifeq ($(STATIC),1)
	LDFLAGS+=$(addsuffix .a,$(addprefix -l:lib,$(LIBS)))
else
	LDFLAGS+=$(addprefix -l,$(LIBS))
endif

SOURCES+=$(SOURCES-1)
CXXFLAGS+=$(CFLAGS-1)
LDFLAGS+=$(LDFLAGS-1)

OBJS := $(patsubst %.c, $(BUILDDIR)/%.o, $(SOURCES))
DEPS=$(OBJS:.o=.d)

$(TARGET): $(DEPS) $(OBJS) $(SOURCES)
	$(CXX) $(CXXFLAGS) -o $@ $(OBJS) $(LDFLAGS)

$(BUILDDIR)/%.d : %.c
	@mkdir -p $(dir $@)
	@$(CXX) $(CXXFLAGS) -MM $(basename $*).c | sed -e 's@^\(.*\)\.o:@\1.d \1.o:@' > $@

$(BUILDDIR)/%.o : %.c
	@mkdir -p $(dir $@)
	$(CXX) $(CXXFLAGS) -c $*.c -o $@

all: $(TARGET)

clean:
	rm -rf $(BUILDDIR) $(TARGET) >> /dev/null

# pull in dependency info for *existing* .o files
ifneq "$(MAKECMDGOALS)" "clean"
-include $(DEPS)
endif
